<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>bwa Iterator workflow</name>
        <!--Processing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>BWA alignment</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/lgt_bwa</executable>
            <param>
            	<key>--input_file</key>
				<value>$;QUERY_FILE$;</value>
            </param>
            <param>
            	<key>--reference</key>
            	<value>$;I_FILE_PATH$;</value>
            </param>
            <param>
            	<key>--output_dir</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/</value>
            </param>
            <param>
            	<key>--use_mem</key>
            	<value>$;USE_MEM$;</value>
            </param>
            <param>
            	<key>--misMsc</key>
            	<value>$;MISMATCH_PENALTY$;</value>
            </param>
            <param>
            	<key>--maxGapO</key>
            	<value>$;MAX_GAP_OPENS$;</value>
            </param>
            <param>
            	<key>--maxGapE</key>
            	<value>$;MAX_GAP_EXTNS$;</value>
            </param>
            <param>
            	<key>--gapOsc</key>
            	<value>$;GAP_OPEN_PENALTY$;</value>
            </param>
            <param>
            	<key>--gapEsc</key>
            	<value>$;GAP_EXTN_PENALTY$;</value>
            </param>
            <param>
            	<key>--nThrds</key>
            	<value>$;MAX_THREADS$;</value>
            </param>
            <param>
            	<key>--num_aligns</key>
            	<value>$;MAX_ALIGN$;</value>
            </param>
            <param>
            	<key>--bwa_path</key>
            	<value>$;BWA_EXEC$;</value>
            </param>
            <param>
            	<key>--samtools_path</key>
            	<value>$;SAMTOOLS_EXEC$;</value>
            </param>
            <param>
            	<key>--bwa_params</key>
            	<value>$;BWA_ARGS$;</value>
            </param>
            <param>
            	<key>--samtools_params</key>
            	<value>$;SAM_VIEW_ARGS$;</value>
			</param>
			<param>
				<key>--bam_paired</key>
				<value>$;PAIRED$;</value>
			</param>
            <param>
            	<key>stderr</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_align.stderr</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>Filter reads</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/lgt_filter_reads</executable>
            <param>
            	<key>--input_file</key>
				<value></value>
            </param>
            <param>
            	<key>--input_list</key>
				<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/bam.list</value>
            </param>
            <param>
            	<key>--output_dir</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/</value>
			</param>
			<param>
				<key>--softclip_min</key>
				<value>$;SOFTCLIP_MIN$;</value>
			</param>
            <param>
            	<key>--samtools_path</key>
            	<value>$;SAMTOOLS_EXEC$;</value>
            </param>
            <param>
            	<key>--samtools_params</key>
            	<value>$;SAM_SORT_ARGS$;</value>
			</param>
			<param>
				<key>--keep_mm_reads</key>
				<value>$;KEEP_MM$;</value>
			</param>
            <param>
            	<key>stdout</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_filter.stdout</value>
            </param>
            <param>
            	<key>stderr</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_filter.stderr</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
